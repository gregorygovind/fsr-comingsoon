<header class="header bg-primary full-screen">
  <div class="container text-center clearfix">
    <%= image_tag "logo-free_seo_report.png", alt: "logo Free SEO Report", class: "margin-top_double margin-bottom" %>
    <h1 class="text-white text-black text-upper text-biggest margin-bottom_double">Something great is coming</h1>
  </div>
  <div class="container clearfix padding-bottom">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <form role="form" class="margin-top">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address:</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="We will not spam you :)">
          </div>
          <button type="button" class="btn btn-primary btn-block">Sign up</button>
        </form>
      </div>
    </div>
  </div>
  <div class="container text-center margin-top_double clearfix">
    <div class="col-md-2 col-md-offset-5 margin-bottom">
      <select class="cs-select cs-skin-elastic">
  			<option value="english" data-class="flag-usa" selected>English</option>
  			<option value="france" data-class="flag-france">France</option>
  			<option value="german" data-class="flag-germany">German</option>
  			<option value="italian" data-class="flag-italy">Italian</option>
  			<option value="portuguese" data-class="flag-brazil">Portuguese</option>
  			<option value="spanish" data-class="flag-spain">Spanish</option>
  		</select>
    </div>
  </div>
  <script>
		(function() {
			[].slice.call( document.querySelectorAll( 'select.cs-select' ) ).forEach( function(el) {	
				new SelectFx(el);
			} );
		})();
	</script>
	<style>
	  body { background-color: #455660; }
	</style>
</header>